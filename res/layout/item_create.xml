<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout 
        android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">	
    
        <TextView 
            android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/boxName" />
    		
   		<EditText 
   		    android:id="@+id/newItemName" 
		  	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="@string/boxNameHint" 
			android:layout_weight="1"/>   
  	</LinearLayout>
  	
  	<TextView 
  	    android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/boxDescription" />

	<EditText
	    android:id="@+id/newItemDescription"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:gravity="top"
	    android:hint="@string/boxDescHint"
	    android:scrollbars="vertical" />
	
	<LinearLayout 
        android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
   		
    	<Button 
    	    android:id="@+id/newItemConfirmButton" 
	 		android:text="@string/newItemButtonText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>
    	
 	    <Button 
    	    android:id="@+id/addNewItemButton" 
	 		android:text="@string/newItemAndNewButtonText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>
 	    
 	    <Button 
    	    android:id="@+id/addNewItemFinishedButton" 
	 		android:text="@string/newItemFinishedButtonText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>
	    		
    </LinearLayout>
    	
</LinearLayout>